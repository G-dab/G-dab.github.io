@charset "UTF-8";@font-face{font-family:comfortaa-regular;src:url(/fonts/Comfortaa-Regular.ttf)format("truetype")}.post-container{padding:1% 10%;display:flex;flex-wrap:wrap;gap:10px;justify-content:center}.post-item{width:300px;height:200px;border-radius:5px;border:2.5px solid #3e3c3c;background-color:#fff;padding:5px;box-shadow:0 5px 5px rgba(0,0,0,.1);display:flex;flex-direction:column;align-items:center;text-align:center;overflow:hidden;position:relative}.post-item:hover::after{opacity:1}.post-item a{text-decoration:none;color:#000}.post-item img{width:200px;height:auto}.post-item h2{margin:0;padding:5px 0;font-family:roboto-thin,sans-serif;font-size:15px}.post-item:hover{transform:scale(1.05);z-index:2}.post-item::after{content:attr(data-description);position:absolute;top:0;left:0;right:0;bottom:0;background-color:rgba(0,0,0,.7);color:#fff;font-family:comfortaa-regular;font-size:15px;padding:10px;display:flex;align-items:center;justify-content:center;opacity:0;transition:opacity .3s;pointer-events:none}.post-item:hover::after{opacity:1}@media(max-width:600px){.post-container{flex-direction:column}}